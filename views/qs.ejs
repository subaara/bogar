<% layout('layout') -%>
<div class="container">

  <a href="#" name="addQuestion"> Add Question </a>

  <div class="question_list_container clear">
    <table id="questionList" style="width: 900px">
      <thead> 
        <tr>
          <th colspan="2" style="width: 20%;">   </th>
          <th> Question </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td> <a href="#"> Edit </a> </td>
          <td> <a href="#"> Delete </a> </td>
          <td> here the question will go. ....... .... </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>









<div class="overlay none"> </div>
<div class="add_qstn_container none">
  <div class="input-element">
    <!-- <label> Enter </label> -->
    <input type="text" name="question" placeholder="Enter the question">
  </div>
  <div class="input-element">
    <input type="text" name="option_1" placeholder="Enter the option_1">
  </div>
  <div class="input-element">
    <input type="text" name="option_2" placeholder="Enter the option_2">
  </div>
  <div class="input-element">
    <input type="text" name="option_3" placeholder="Enter the option_3">
  </div>
  <div class="input-element">
    <input type="text" name="option_4" placeholder="Enter the option_41">
  </div>
  <div class="input-element">
    <select name="answer"> 
      <option value="1"> Option 1 </option>
      <option value="2"> Option 2 </option>
      <option value="3"> Option 3 </option>
      <option value="4"> Option 4 </option>
    </select>
  </div>
</div>

<style type="text/css">
  .input-element input, .input-element select, .input-element textarea{
    width: 600px;
    height: 35px;
    margin-bottom: 20px;
    border: 1px solid #cfcfd7;
    border-radius: 3px;
    font-size: 16px;
    padding-left: 10px;
  }
  .input-element select {
    width: 612px;
    height: 40px; 
  }
  .add_qstn_container {
    background: aliceblue;
    width: 621px;
    margin: auto;
    padding: 30px 150px;
    z-index: 999;
    position: absolute;
    top: 25px;
    left: 0;
    right: 0;
  }
  .overlay {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    z-index: 400;
    top: 0;
    left: 0;
  }
  .none {
    display: none;
  }
  a[name=addQuestion] {
    text-decoration: none;
    color: #fff;
    background: #007ee5;
    padding: 5px 10px;
    border-radius: 2px;
    font-size: 20px;
    float: right;
  }
  th {
    text-align: left;
    border-top: solid 4px #eeeff2;
    border-bottom: solid 4px #eeeff2;
    border-left: solid 4px #eeeff2;
    padding-left: 5px;
  }
  .clear {
    clear: both;
  }

</style>
<script type="text/javascript">
  $('[name=addQuestion]').click(function() {
    $('.overlay').fadeIn()
    $('.add_qstn_container').fadeIn()
  });
